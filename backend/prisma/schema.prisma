generator client {
  provider = "prisma-client-js"
  engineType = "binary"
}

datasource db {
  provider = "postgresql"
}

model MarketSnapshot {
  id          String   @id @default(cuid())
  platform    String
  marketId    String
  question    String
  probability Float
  volume      Float?
  volume24h   Float?
  liquidity   Float?
  createdAt   DateTime?
  endDate     DateTime?
  trendScore  Float?
  fetchedAt   DateTime @default(now())

  @@index([platform, fetchedAt])
  @@index([fetchedAt])
}